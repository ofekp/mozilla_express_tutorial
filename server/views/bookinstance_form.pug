extends layout

block content
  h1= title

  form(method='POST', action='')
    div.form-group
      label(for='book') Book:
      select#book.form-control(type='select', placeholder='Select book' name='book' required='true')
        option(value='select_book' disabled selected) Select book
        for book in book_list
          if bookinstance
            option(value=book._id selected=bookinstance.book!=undefined && bookinstance.book.toString()==book._id.toString() ? 'selected' : false) #{book.title}
          else
            option(value=book._id) #{book.title}
    div.form-group
      label(for='imprint') Imprint:
      input#imprint.form-control(type='text' name='imprint' placeholder='Publisher and date information' value=(undefined===bookinstance ? '' : bookinstance.imprint))
    div.form-group
      div
        //-=console.log(moment(bookinstance.due_back).format('DD/MM/YYYY'))
      div
      label(for='due_back') Date when the book will be available:
      input#due_back.form-control(type='date' name='due_back' value=(undefined==bookinstance ? '' : moment(bookinstance.due_back).format('YYYY-MM-DD')))
    div.form-group
      label(for='status') Status:
      select#status.form-control(type='select' placeholder='Select status' name='status' required='true')
        option(value='Maintenance') Maintenance
        option(value='Available') Available
        option(value='Loaned') Loaned
        option(value='Reserved') Reserved
    button.btn.btn-primary(type='submit') Submit

  if errors 
    ul
      for error in errors
        li!= error.msg
